@test
def test_i64():
    assert i64("10") == 10
    assert i64("10", 0) == 10
    assert i64("10", 2) == 2
    assert (
        i64("0100000000000000000000000000000000000000000000000000000000000010", 2)
        == 4611686018427387906)
    assert i64("10", 8) == 8
    assert i64("10", 10) == 10
    assert i64("10", 16) == 16
    assert i64("af", 16) == 175
    assert i64("AF", 16) == 175
    assert i64("+1") == 1
    assert i64("-1") == -1

